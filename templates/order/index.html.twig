{% extends 'base.html.twig' %}

{% block title %}Mon panier !{% endblock %}

{% block body %}

    <div class="container-fluid bg-primary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-3 font-weight-bold text-white">Ma commande</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0"><a class="text-white" href="{{ path('home') }}">Accueil</a></p>
                <p class="m-0 px-2">/</p>
                <p class="m-0"><a class="text-white" href="{{ path('cart') }}">Mon panier</a></p>
                <p class="m-0 px-2">/</p>
                <p class="m-0">Ma commande</p>
            </div>
        </div>
    </div>

    <!-- Class Start -->
    <div class="container-fluid pt-5">
        <div class="container">

            {% if cart | length > 0 %}
            <div class="text-center pb-2">
                <p class="section-title px-5">
                    <span class="px-2">Retrouvez l'ensemble des produits que vous avez ajouté à votre panier</span>
                </p>
                <h1 class="mb-4"><hr>Ma commande</h1>
            </div>

            <div class="row">
                <div class="col-6">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-6">
                    <b class="mb-lg-1">Récapitulatif de ma commande</b>

                    {% set total = null %}
                    {% for key, product in cart %}

                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    {% if product.product.illustration is defined and product.product.illustration is not null %}
                                        <img src="{{ asset('uploads/' ~ product.product.illustration) }}" class="img-fluid rounded-start" alt="{{ product.product.name }}">
                                    {% else %}
                                        <img src="{{ asset('images/img_1.png') }}" class="img-fluid rounded-start" alt="{{ product.product.name }}">
                                    {% endif %}
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ product.product.name }}</h5>
                                        <p class="card-text">{{ product.product.subtitle }}</p>
                                        <p class="card-text"><small class="text-muted">{{ product.quantity }} x {{ product.product.price }} FDJ</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% set total = total + (product.product.price * product.quantity) %}
                    {% endfor %}
                    <hr>
                    <strong>Total à payer : </strong>  {{ (total / 100) | number_format(2, ',', '.') }} FDJ

                </div>
            </div>

            {% else %}
                <hr>
                <p><b>Votre panier est vide</b></p>
            {% endif %}
        </div>
    </div>
{% endblock %}
